                  "bone": "block",
                  "cube": 0,
                  "face": "east"
                },
                "direction": "east",
                "condition": "same_block"
              },
              {
                "geometry_part": {
                  "bone": "block",
                  "cube": 0,
                  "face": "west"
                },
                "direction": "west",
                "condition": "same_block"
              }
            ]
          }
        }
      }
