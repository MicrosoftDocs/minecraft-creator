        "dataType": 20,
        "samples": {
          "/vanilla/behavior_pack/entities/creaking.json": [
            {
              "path": "/minecraft:entity/component_groups/minecraft:neutral/minecraft:looked_at/",
              "content": {
                "test": "actor_health",
                "subject": "other",
                "operator": ">",
                "value": 0
              }
